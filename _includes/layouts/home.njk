<section class="section has-no-bottom-padding">
  <div class="container">
    <div class="columns has-text-centered">
      <div class="column">
        <img src="/static/img/arrow-down-sign-to-navigate.png">
      </div>
    </div>
  </div>
</section>

{# What we do section #}
<section class="section is-paddingless what-we-do">
  <div class="container">

    {# What we do header #}
    <div class="columns is-vcentered has-text-centered">
      <div class="column has-mapsi-padding">
        <h2 class="is-size-5 has-text-weight-medium is-uppercase has-text-mapsi-darkblue">What we do</h2>
      </div>
    </div>

    <div class="columns is-half has-text-centered">

      <div class="column is-narrow what-we-do-card is-one-third-desktop">
        <div class="columns is-paddingless is-marginless is-multiline">
          <div class="column is-full has-top-rounded-corners">
            <img src="/static/img/qualitative-research.png">
          </div>
          <div class="column is-full has-bottom-rounded-corners">
            <h3 class="has-text-weight-medium is-uppercase has-text-mapsi-darkblue">Qualitative <br/> Mapping of Needs</h3>
          </div>
        </div>
      </div>

      <div class="column is-narrow what-we-do-card is-one-third-desktop">
        <div class="columns is-paddingless is-marginless is-multiline">
          <div class="column is-full has-top-rounded-corners">
            <img src="/static/img/laptop.png">
          </div>
          <div class="column is-full has-bottom-rounded-corners">
            <h3 class="has-text-weight-medium is-uppercase has-text-mapsi-darkblue">Data Mapping and<br/> result visualisation</h3>
          </div>
        </div>
      </div>

      <div class="column is-narrow what-we-do-card is-one-third-desktop">
        <div class="columns is-paddingless is-marginless is-multiline">
          <div class="column is-full has-top-rounded-corners">
            <img src="/static/img/teamwork.png">
          </div>
          <div class="column is-full has-bottom-rounded-corners">
            <h3 class="has-text-weight-medium is-uppercase has-text-mapsi-darkblue">Ideas generation<br/> and co-design</h3>
          </div>
        </div>
      </div>
    </div>

    <div class="columns has-mapsi-padding is-8 has-text-centered">
      <div class="column ">
        <a href="/whatwedo" class="button mapsi is-medium is-uppercase">Explore</a>
      </div>
    </div>

  </div>
</section>

