{% extends 'layouts/base.njk' %}

{% import "../components/macros/macros.njk" as macros %}

{% block content %}

{# Hero image #}

<section class="hero is-medium custom-hero-background">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="is-size-1 title">
        {{ hero_title}}
      </h1>
      <h2 class="subtitle">
        {{ hero_description | safe }}        
      </h2>
    </div>
  </div>
</section>

{# Down arrow 
