{# DUNDEE PICTURE #}
<section class="section dundee-picture">
  <div class="container">

    {# Dundee picture header #}
    <div class="columns is-vcentered has-text-centered">
      <div class="column has-mapsi-padding">
        <h2 class="is-size-5 has-text-weight-medium is-uppercase has-text-mapsi-darkblue">Blog</h2>
      </div>
    </div>

    <div class="columns has-text-centered">
    
      {% for post in collections.post | reverse %}
        {% if loop.index0 < 3 %}
          {{ macros.blog_card(
              post.data.title,
              post.url, 
              post.data.image) 
          }}    
        {% endif %}
      {% endfor %}

    </div>


    <div class="columns has-mapsi-padding is-8 has-text-centered">
      <div class="column">
        <a href="/blog" class="button mapsi is-medium is-uppercase">Explore</a>
      </div>
    </div>

  </section>

  <section class="section contactform has-background-mapsi-white">
    <div class="columns is-centered is-vcentered">
      <div class="column has-text-centered is-4">
      <h2 class="is-size-5 has-text-weight-medium is-uppercase has-text-mapsi-darkblue">Contact us</h2> <br/>
      {% include "components/form.njk" %}
      </div>
    </div>

  </section>

