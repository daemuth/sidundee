{% for post in postslist | reverse %}
	<div class="postlisting columns has-text-mapsi-white">	

			{# Post image #}
			<div class="column is-4">
				<a href="{{ post.url | url }}">
					<figure class="image">
						{# TODO: Replace placeholder image #}
						<img src="https://bulma.io/images/placeholders/128x128.png">
					</figure>
				</a>
			</div>

			{# Post details #}
			<div class="column is-8">
				<div class="columns is-paddingless is-marginless is-multiline">
					<div class="column is-full has-text-mapsi-darkblue">
						<h3 class="is-size-4 is-uppercase has-text-mapsi-darkblue">
							<a href="{{ post.url | url }}">
								{% if post.data.title %}
									{{ post.data.title }}
								{% else %}
												Untitled
								{% endif %}
							</a>
						</h3>
					</div>
				</div>
				
					{# Post summary #}
					{% if post.data.summary %}
					<div class="column is-full">
						<p class="post-summary">
							{{ post.data.summary }}
						</p>
					</div>
					{% endif %}
				
					{# Post date #}
					<div class="column is-full">
					<p>
						<time datetime="{{ post.date | machineDate }}">
							<small>{{ post.date | readableDate }} by {{ post.data.author.name }}</small>
						</time>
					</p>
					</div>
				</div>
			</div>
	{% endfor %}
	
