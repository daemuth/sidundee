<section class="section is-marginless is-paddingless">
  <div class="container">
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">

      {% if config.environment == "production" %}
        <a class="navbar-item" href="{{ metadata.url }}">
      {% else %}
        <a class="navbar-item" href="{{ metadata.staging_url }}">
      {% endif %}
          <img src="\static\img\MAPSIlogo300px.png" width="112" height="28">
        </a>
            

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-end">
          {%- for nav in collections.nav | sort(attribute="date") -%}
            <a class="navbar-item has-text-weight-bold {% if nav.url == page.url %} active-page {% endif %}"  href="{{ nav.url | url }}" {% if nav.url == page.url %} data-current="current item" {% endif %}>{{ nav.data.navtitle }}</a>
          {%- endfor -%}
        </div>
      </div>
    </nav>
  </div>
</section>